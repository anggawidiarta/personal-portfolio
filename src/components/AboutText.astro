---
const { title, paragraph_1, paragraph_2 } = Astro.props;
---

<header>
  <h2
    class="text-2xl text-[rgb(250,250,250)] font-[600] article-title font-fjalla max-md:text-[20px] tracking-wider"
  >
    {title}
  </h2>
</header>

<section
  class="text-justify max-md:text-[12px] about-text font-helvetica font-medium md:text-base leading-loose lg:tracking-normal"
>
  <p>
    {paragraph_1}
  </p>

  <p>
    {paragraph_2}
  </p>
</section>
