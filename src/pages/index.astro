---
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/Sidebar.astro";
import AboutList from "../components/AboutList.astro";
import AboutText from "../components/AboutText.astro";
import TestimonialList from "../components/TestimonialList.astro";
import ClientList from "../components/ClientList.astro";
import ExperienceList from "../components/ExperienceList.astro";
import SkillList from "../components/SkillList.astro";
import ProjectList from "../components/ProjectList.astro";
import BlogList from "../components/BlogList.astro";
import FilterItem from "../components/FilterItem.astro";
import SelectItem from "../components/SelectItem.astro";
``;
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogLayout from "../layouts/BlogLayout.astro";
import SkillLayout from "../layouts/SkillLayout.astro";
import TimelineLayout from "../layouts/TimelineLayout.astro";
---

<BaseLayout title="Web Portfolio | Angga Widiarta">
  <!--
    - #MAIN
  -->

  <main>
    <!--
      - #SIDEBAR
    -->

    <Sidebar name="Angga Widiarta" title="Web Enthusiast | Data Analyst" />

    <!--
      - #main-content
    -->

    <div class="main-content">
      <!--
        - #NAVBAR
      -->

      <nav class="navbar justify-center">
        <ul class="navbar-list">
          <Navbar about="About" className="navbar-link active" />
          <Navbar about="Resume" className="navbar-link " />
          <Navbar about="Portfolio" className="navbar-link " />
          <Navbar about="Blog" className="navbar-link " />

          <!-- <Navbar about="Contact" className="navbar-link " /> -->
        </ul>
      </nav>

      <!--
        - #ABOUT
      -->

      <article class="about active" data-page="about">
        <AboutText
          title="About Me"
          paragraph_1="A computer science graduate with a high dedication to learning and developing new things both within and outside the field of technology. Actively involved in various organizational activities that have honed leadership skills, adaptability, and the ability to work under pressure."
          paragraph_2="Possessing a fervent passion for technology, an unwavering commitment to continual learning, and a rich background in diverse organizational endeavors, I am assured in my ability to make a constructive impact within a dynamic professional setting. I am poised to confront challenges, fostering collaborative growth as we collectively strive towards shared objectives."
        />

        <!--
          - service
        -->

        <section class="service">
          <h3 class="h3 service-title font-bold">What i'm doing</h3>

          <ul class="service-list">
            <AboutList
              imgSrc="/doing-dashboard.png"
              imgAlt="Data Analytic"
              serviceTitle="Data Analytic"
              serviceDesc="Perform data analysis from small to large, starting from taking, preparing, cleaning to exploring data analysis."
            />
            <AboutList
              imgSrc="/doing-code.png"
              imgAlt="Web Development"
              serviceTitle="Web Development"
              serviceDesc="Doing development on the front-end web. Experienced in using several frameworks such as bootstrap, tailwinds, MERN stack."
            />
            <AboutList
              imgSrc="/doing-writing.png"
              imgAlt="Content Writing"
              serviceTitle="Content Writing"
              serviceDesc="Creating compelling narratives, generating SEO-optimized articles, and tailoring content to specific target demographics."
            />
            <AboutList
              imgSrc="/doing-editing.png"
              imgAlt="Video Editing"
              serviceTitle="Video Editing"
              serviceDesc="Possessing proficiency in video editing, the capability to produce engaging and impactful visual content has been cultivated."
            />
          </ul>
        </section>

        <!--
          - testimonials
        -->

        <section class="testimonials">
          <h3 class="h3 testimonials-title font-bold">Certifications</h3>

          <ul class="testimonials-list has-scrollbar">
            <TestimonialList
              imgSrc="/logo-google.png"
              imgAlt="Google"
              name="Google"
              desc="Google Data Analytic"
              href="https://www.coursera.org/account/accomplishments/specialization/certificate/8CYL6AA8LXNL"
            />
            <TestimonialList
              imgSrc="/logo-microsoft.png"
              imgAlt="Microsoft"
              name="Microsoft"
              desc="AI-900: Microsoft Azure AI Fundamentals"
              href="https://drive.google.com/file/d/1upzxjOGnz0RohFdYwsAIjsuPgnHdBTDs/view"
            />
            <TestimonialList
              imgSrc="/logo-microsoft.png"
              imgAlt="Microsoft"
              name="Microsoft"
              desc="DP-900: Microsoft Azure Data Fundamentals"
              href="https://drive.google.com/file/d/1OQrKuwNO8L83KDa8FS0LhhDGBDOcA8ZA/view"
            />
            <TestimonialList
              imgSrc="/logo-microsoft.png"
              imgAlt="Microsoft"
              name="Microsoft"
              desc="PL-900: Microsoft Power Platform Fundamentals"
              href="https://drive.google.com/file/d/1ZuasYnL782DPZFJ4-AOT0ADJVBzFQ6_Q/view"
            />
          </ul>
        </section>

        <!--
          - testimonials modal
        -->

        <div class="modal-container" data-modal-container>
          <div class="overlay" data-overlay></div>

          <section class="testimonials-modal">
            <button class="modal-close-btn" data-modal-close-btn>
              <ion-icon name="close-outline"></ion-icon>
            </button>

            <div class="modal-img-wrapper">
              <figure class="modal-avatar-box">
                <img src="" alt="Daniel lewis" width="80" data-modal-img />
              </figure>

              <!-- <img src="/icon-quote.svg" alt="quote icon" /> -->
            </div>

            <div class="modal-content">
              <h4 class="h3 modal-title" data-modal-title>Daniel lewis</h4>

              <time data-modal-datetime>14 June, 2023</time>

              <div data-modal-text>
                <p>
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus
                  distinctio doloremque porro autem. Cum, omnis repellendus ab
                  aspernatur eius error.
                </p>
              </div>
            </div>
          </section>
        </div>

        <!--
          - clients
        -->

        <!-- <section class="clients">
          <h3 class="h3 clients-title font-bold">Clients</h3>

          <ul class="clients-list has-scrollbar">
            <ClientList href="#" imgSrc="logo-2-color.png" imgAlt="" />
          </ul>
        </section> -->
      </article>

      <!--
        - #RESUME
      -->

      <article class="resume" data-page="resume">
        <header>
          <h2 class="h2 article-title font-bold">Resume</h2>
        </header>

        <!-- Education Resume -->
        <TimelineLayout title="Education" iconName="">
          <ExperienceList
            name="Bachelor Of Computer Science"
            timeline="2018 - 2023"
            desc="University Of Mataram"
          />
          <ExperienceList
            name="Science Major"
            timeline="2015 - 2018"
            desc="Senior High School 6 Mataram"
          />
        </TimelineLayout>

        <!-- Experience Resume -->
        <TimelineLayout title="Experience" iconName="bookmarks-outline">
          <ExperienceList
            name="Freelance"
            timeline="2023 - "
            desc="Social Media Specialist, Copywriter, Programmer in Jalan Digital  "
          />
          <ExperienceList
            name="Web Developer"
            timeline="2020 - 2021"
            desc="Intern Web Developer at Mataram Immigration Office"
          />
          <ExperienceList
            name="Assistant Lecturer"
            timeline="2019 - 2020"
            desc="Assistant Lecturer for Database Systems Subject"
          />
        </TimelineLayout>

        <!-- Skill Resume -->
        <SkillLayout>
          <SkillList title="Data Analysis" percentage="90" />
          <SkillList title="Web Development" percentage="85" />
          <SkillList title="Video Editing" percentage="70" />
          <SkillList title="Content Creation" percentage="80" />
        </SkillLayout>
      </article>

      <!--
        - #PORTFOLIO
      -->

      <article class="portfolio" data-page="portfolio">
        <header>
          <h2 class="h2 article-title font-bold">Portfolio</h2>
        </header>

        <section class="projects">
          <ul class="filter-list">
            <FilterItem title="All" active="active" />
            <FilterItem title="Applications" />
            <FilterItem title="Web Development" />
            <FilterItem title="Data Science" />
            <FilterItem title="Others" />
          </ul>

          <div class="filter-select-box">
            <button class="filter-select" data-select>
              <div class="select-value" data-select-value>Select category</div>

              <div class="select-icon">
                <ion-icon name="chevron-down"></ion-icon>
              </div>
            </button>
            <ul class="select-list">
              <SelectItem title="all" />
              <SelectItem title="Applications" />
              <SelectItem title="Web Development" />
              <SelectItem title="Data Science" />
              <SelectItem title="Others" />
            </ul>
          </div>

          <!-- Project List -->

          <ul class="project-list">
            <ProjectList
              projectName="Sentiment Analysis Using XGBoost Method"
              projectCategory="Data Science"
              imgSrc="/project-sentiment.png"
              imgAlt="Analysis Of Community Sentiment On The Policy Of Implementation Of PPKM On Twitter Social Media Using Xgboost Method"
              href="https://github.com/anggawidiarta/SentimentAnalysisPPKM-XGBoost"
            />
            <ProjectList
              projectName="Blog"
              projectCategory="Web Development"
              imgSrc="/project-mboye.png"
              imgAlt="mBoye Ticketing App"
              href="https://www.figma.com/file/dbJDJajwPa01Hzrzb3ZGuC/Vahitra-Ticketing-Apps-Design-(Community)?type=design&node-id=0%3A1&mode=design&t=H97NrjzTC79Nh1mH-1"
            />
            <ProjectList
              projectName="Mataram Immigration Office Inventory System"
              projectCategory="Web Development"
              imgSrc="/project-imigrasi.png"
              imgAlt="Mataram Immigration Office Inventory System"
            />
            <ProjectList
              projectName="Dotaku Mobile Apps"
              projectCategory="Applications"
              imgSrc="/project-dotaku.svg"
              imgAlt="Dotaku Mobile Apps"
            />
            <ProjectList
              projectName="Wikipaedi Search"
              projectCategory="Web Development"
              imgSrc="/project-wikipaedi.png"
              imgAlt="Wikipaedi"
              href="https://wikipaedi-search.vercel.app/"
            />
            <ProjectList
              projectName="KKN Final Project Video"
              projectCategory="Others"
              imgSrc="/project-tetebatu.png"
              imgAlt="KKN Final Project Video"
              href="https://www.youtube.com/watch?v=Nz46U6bSxWM"
            />
            <ProjectList
              projectName="Portfolio Website"
              projectCategory="Web Development"
              imgSrc="/project-portfolio.png"
              imgAlt="First Portfolio Website"
              href="https://portfolio-anggawidiarta.vercel.app/"
            />
            <ProjectList
              projectName="Theatre Ticketing App"
              projectCategory="Applications"
              imgSrc="/project-mboye.png"
              imgAlt="mBoye Ticketing App"
              href="https://www.figma.com/file/dbJDJajwPa01Hzrzb3ZGuC/Vahitra-Ticketing-Apps-Design-(Community)?type=design&node-id=0%3A1&mode=design&t=H97NrjzTC79Nh1mH-1"
            />
          </ul>
        </section>
      </article>

      <!--
        - #BLOG
      -->

      <BlogLayout title="Blog">
        <BlogList
          href="#"
          imgSrc="/blog-astro.png"
          imgAlt="AstroJS"
          category="Tech Stack"
          date="11, December 2023"
          title="AstroJS: Why This Lightweight Framework is Perfect for Your Project!"
          desc="AstroJS is a powerful tool that helps us create websites swiftly and efficiently, much like using the right tools to construct a house."
        />
        <BlogList
          href="#"
          imgSrc="/blog-csr.png"
          imgAlt="scam"
          category="Web"
          date="12, December 2023"
          title="Unveiling the Depths of Client Side Rendering (CSR) vs Server Side Rendering (SSR): Their Pros and Cons"
          desc=" The comparison between Client Side Rendering (CSR) and Server Side Rendering (SSR). "
        />
      </BlogLayout>
    </div>
  </main>
</BaseLayout>
