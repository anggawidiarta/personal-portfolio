---
interface Props {
  title: String;
  iconName: String;
}
const { title, iconName } = Astro.props;
---

<section class="timeline">
  <div class="title-wrapper">
    <div class="icon-box">
      <ion-icon name={iconName || "book-outline"}></ion-icon>
    </div>

    <h3 class="text-2xl font-[600] tracking-wider font-fjalla h3 service-title text-[rgb(250,250,250)]">{title}</h3>
  </div>

  <ol class="timeline-list">
    <slot />
  </ol>
</section>
