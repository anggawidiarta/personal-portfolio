---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../css/styles.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Deskripsi website -->
    <meta name="description" content="Astro description" />
    <!-- Menentukan lebar viewport -->
    <meta name="viewport" content="width=device-width" />
    <!-- Mengatur favicon website -->
    <link rel="icon" type="image/svg+xml" href="/astronaut.svg" />
    <!-- Menampilkan generator yang digunakan -->
    <meta name="generator" content={Astro.generator} />

    <!--
        - Link ke font Google
      -->
    <!-- Membuka koneksi ke fonts.googleapis.com -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <!-- Membuka koneksi ke fonts.gstatic.com -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Mengatur font yang digunakan -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    <!-- Menampilkan judul halaman -->
    <title>{title}</title>
  </head>
  <!-- Bagian body dari halaman -->
  <body>
    <!-- Slot untuk memasukkan konten lain -->
    <slot />
  </body>
</html>
