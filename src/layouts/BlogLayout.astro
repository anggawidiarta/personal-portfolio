---
interface Props {
  title: String;
}
const { title } = Astro.props;
---

<article class="blog" data-page="blog">
  <header>
    <h2 class="text-2xl text-[rgb(250,250,250)] font-[600] article-title font-fjalla max-md:text-[20px] tracking-wider">{title}</h2>
  </header>

  <section class="blog-posts">
    <ul class="blog-posts-list">
      <slot />
    </ul>
  </section>
</article>
